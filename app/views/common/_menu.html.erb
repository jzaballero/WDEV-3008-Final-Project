<div class="column is-one-fifth mt-6 ml-6 mr-6">
  <aside class="menu">
    <p class="menu-label ">
      Account
    </p>

    <ul class="menu-list">
      <% if user_signed_in? %>
        <li><%= link_to 'Sign Out', destroy_user_session_path %></li>
      <% else %>
        <li><%= link_to 'Register', new_user_registration_path %></li>
        <li><%= link_to 'Log In', new_user_session_path %></li>
      <% end %>
    </ul>

    <p class="menu-label ">
      Navigation
    </p>

    <ul class="menu-list">
      <li>
        <%= link_to "Products", products_path%>
      </li>
      <li>
        <ul class="has-text-weight-normal">
          <li>
            <div class="dropdown is-hoverable">
              <div class="dropdown-trigger">
                <a aria-haspopup="true" aria-controls="dropdown-menu4">
                  <span>Category</span>
                  <span class="icon is-small">
                    <i class="fas fa-angle-down" aria-hidden="true"></i>
                  </span>
                </a>
              </div>
              <div class="dropdown-menu" id="dropdown-menu4" role="menu">
                <div class="dropdown-content">
                  <% link_categories.each do | category | %>
                    <%= render partial: "common/menu_category", object: category %>
                  <% end %>
                </div>
              </div>
            </div>
          </li>
        </ul>

      </li>
    </ul>

    <p class="menu-label">
      General
    </p>

    <ul class="menu-list">
      <% link_pages.each do | page | %>
        <li><%= link_to page.title, permalink_path(page.permalink) %> </li>
      <% end %>
    </ul>

    <p class="menu-label">
      Search Products
    </p>
    <ul class="menu-list">
      <li>
        <%= form_with(url: search_products_path, method: :get, local: true) do %>
          <div class="field">

            <div class="control">
              <%= text_field_tag(:keywords, nil, class: "input", placeholder: "Charizard, Pikachu, etc..") %>
            </div>

            <div class="control mt-2">
              <div class="select is-fullwidth">
                <select name="search_category" id="search_category">
                  <option disabled>Choose Category...</option>
                  <option value="">All</option>
                  <% link_categories.each do | category | %>
                    <option value="<%=category.id%>"><%= category.name %></option>
                  <% end %>
                </select>
              </div>
            </div>

            <div class="control mt-2">
              <%= submit_tag("Search", class: "button is-primary is-fullwidth") %>
            </div>
          </div>

        <% end %>
      </li>
    </ul>
  </aside>
</div>
