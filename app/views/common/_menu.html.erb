<div class="column is-one-fifth ml-6">
  <aside class="menu">

    <p class="menu-label ">
      Navigation
    </p>

    <ul class="menu-list">
      <li>
        <%= link_to "Products", products_path%>
      </li>
      <li>
        <ul class="has-text-weight-normal">
          <li>
            <div class="dropdown is-hoverable">
              <div class="dropdown-trigger">
                <a aria-haspopup="true" aria-controls="dropdown-menu4">
                  <span>Category</span>
                  <span class="icon is-small">
                    <i class="fas fa-angle-down" aria-hidden="true"></i>
                  </span>
                </a>
              </div>
              <div class="dropdown-menu" id="dropdown-menu4" role="menu">
                <div class="dropdown-content">
                  <% link_categories.each do | category | %>
                    <%= render partial: "common/menu_category", object: category %>
                  <% end %>
                </div>
              </div>
            </div>
          </li>
        </ul>

      </li>
    </ul>

    <p class="menu-label">
      General
    </p>
    <ul class="menu-list">
      <% link_pages.each do | page | %>
        <li><%= link_to page.title, permalink_path(page.permalink) %> </li>
      <% end %>
    </ul>

    <p class="menu-label">
      Search Products
    </p>
    <ul class="menu-list">
      <li>
        <%= form_with(url: search_products_path, method: :get, local: true) do %>
          <div class="field is-grouped">
            <div class="control is-expanded">
              <%= text_field_tag(:keywords, nil, class: "input", placeholder: "Charizard, Pikachu, etc..") %>
            </div>
            <div class="control">
              <%= submit_tag("Search", class: "button is-primary") %>
            </div>
          </div>
        <% end %>
      </li>
    </ul>
  </aside>
</div>
